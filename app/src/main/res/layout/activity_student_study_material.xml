<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.studentActivities.StudentStudyMaterialActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shape_arc_cropDirection="outside"
            app:shape_arc_height="35dp"
            app:shape_arc_position="bottom">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color" />
        </com.github.florent37.shapeofview.shapes.ArcView>

        <ImageView
            android:id="@+id/iv_s_m_back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Study Material"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_foure_sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_s_study_mt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            tools:listitem="@layout/row_item_student_study_met"/>
    </LinearLayout>
</LinearLayout>