<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.studentActivities.StudentOnlineClassesActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_color">

        <ImageView
            android:id="@+id/iv_s_online_classes_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Online Classes"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="100dp"
        android:layout_marginVertical="20dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/bg_color"
            android:text="Mathematics"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp"
            android:background="@drawable/bg_online_subjects"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/text_color_brown"
            android:text="Urdu"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp"
            android:background="@drawable/bg_online_subjects"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/green_color"
            android:text="Phusics"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp"
            android:background="@drawable/bg_online_subjects"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen_sp"
            android:background="@drawable/bg_online_subjects"/>
    </LinearLayout>

</LinearLayout>